{
    "name": "alphaolomi/php-shoket",
    "description": "Shoket is a PHP client for the Shoket Payment API.",
    "keywords": [
        "alphaolomi",
        "php-shoket",
        "shoket"
    ],
    "homepage": "https://github.com/alphaolomi/php-shoket",
    "license": "MIT",
    "authors": [
        {
            "name": "Alpha Olomi",
            "email": "alphaolomi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Shoket\\SDK\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shoket\\SDK\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
